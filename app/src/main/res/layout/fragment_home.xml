<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />

    <EditText
        android:id="@+id/Humidity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="text"
        android:text="Humidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tempreture"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:inputType="text"
        android:text="Tempreture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SoundSensor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:inputType="text"
        android:text="Sound Sensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/accelerometer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="270dp"
        android:ems="10"
        android:inputType="text"
        android:text="Accelerometer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/Humidity"
        app:layout_constraintTop_toTopOf="@+id/Humidity" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/SoundSensor"
        app:layout_constraintTop_toTopOf="@+id/SoundSensor" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/accelerometer"
        app:layout_constraintTop_toTopOf="@+id/accelerometer" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/tempreture"
        app:layout_constraintTop_toTopOf="@+id/tempreture" />

</androidx.constraintlayout.widget.ConstraintLayout>